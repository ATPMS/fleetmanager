<div class="container">
  <h1>Maintenance Record <small><%= @vessel_maintenance.date_of_maintenance %></small></h1>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: "vessel_maintenances/details", locals: { vessel_maintenance: @vessel_maintenance } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Edit Record", edit_vessel_path(@vessel_maintenance), class: "btn btn-info" %>
      <%= link_to "Back to Maintenance Records", vessel_vessel_maintenances_path(@vessel_maintenance.vessel), class: "btn btn-default" %>
      <%= link_to "Go to Vessel", vessel_vessel_maintenances_path(@vessel_maintenance.vessel), class: "btn btn-primary" %>
      <%= link_to "Delete Record", vessel_maintenance_path(@vessel_maintenance), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      <hr>
    </div>
  </div>
</div>
