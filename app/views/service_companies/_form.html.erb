<%= simple_nested_form_for service_company, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class:'form-control' } }, html: { multipart: true, novalidate: true } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :contact_person %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :contact_number %>
    </div>
    <div class="col-md-6">
      <%= f.input :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :address %>
    </div>
    <div class="col-md-6">
      <%= f.input :notes %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-actions">
        <%= f.submit "Save Service Company Record", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
