<div class="container">
  <div id="login">
    <div class="row">
      <div class="col-md-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign in", class: "btn btn-primary btn-block" %>
            <%= link_to "Register Now", new_user_registration_path, class: "btn btn-block btn-info" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8">
        <div id="banner">
          <h1>Fleet Manager (Beta 0.1)</h1>
        </div>
      </div>
    </div>
  </div>
</div>
