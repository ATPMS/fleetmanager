<div class="container">
  <div id="login">
    <div id="login-container">
      <div class="row">
        <div class="col-md-6" id="login-banner">
          <h2>Fleet Manager</h2>
        </div>
        <div class="col-md-6" id="login-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
