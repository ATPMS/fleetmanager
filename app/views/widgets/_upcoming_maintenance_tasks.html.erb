<table class="table table-bordered">
  <tr>
    <th>Vessel</th>
    <th>Type</th>
    <th>Date</th>
  </tr>
  <% maintenance_records.each do |m| %>
    <tr>
      <td><%= link_to m.vessel, vessel_maintenance_path(m) %></td>
      <td><%= m.maintenance_type %></td>
      <td><%= m.date_of_maintenance %></td>
    </tr>
  <% end %>
</table>
