<%= simple_form_for [:account, user], defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }  do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :company_name %>
  <%= f.input :address %>
  <%= f.submit "Save Record", class: "btn btn-primary" %>
<% end %>
