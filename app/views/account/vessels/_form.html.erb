<%= simple_nested_form_for [:account, vessel], defaults: { wrapper_html: { class: 'form-group' }, input_html: { class:'form-control' } }, html: { multipart: true, novalidate: true } do |f| %>
  <ul class="nav nav-tabs nav-justified">  
    <li class="active"><%= link_to "General", "#general", "data-toggle" => "tab" %></li>
    <li class=""><%= link_to "Images", "#images", "data-toggle" => "tab" %></li>
  </ul>
  <div class="tab-content tab-content-inner">
    <div class="tab-pane active" id="general">
      <%= render partial: "account/vessels/form_general", locals: { f: f } %>
    </div>
    <div class="tab-pane active" id="images">
      <%= render partial: "account/vessels/form_images", locals: { f: f } %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Save Vessel Record", class: "btn btn-primary" %>
  </div>
<% end %>
