<%= simple_nested_form_for vessel, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class:'form-control' } }, html: { multipart: true, novalidate: true } do |f| %>
  <div class="simpleBox">     
    <%= render partial: "vessels/form_general", locals: { f: f } %>
  </div>
  <div class="form-actions">
    <%= f.submit "Save Vessel Record", class: "btn btn-primary" %>
    <% if !f.object.new_record? %>
      <%= link_to "Back to Vessel", vessel_path(f.object), class: "btn btn-default" %>
    <% end %>
  </div>
<% end %>
