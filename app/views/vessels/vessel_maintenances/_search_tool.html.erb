<div class="well">
  <%= form_tag vessel_vessel_maintenances_path(@vessel), method: :get do |f| %>
    <div class="row">
      <div class="col-md-3">
        <%= select_tag :status, options_for_select(VesselMaintenance::MAINTENANCE_STATUSES), prompt: "-- status --", class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= select_tag :maintenance_type_id, options_from_collection_for_select(MaintenanceType.all, :id, :name, @maintenance_type.try(:id)), prompt: "-- By Type --", class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= select_tag :service_company_id, options_from_collection_for_select(ServiceCompany.where(user_id: current_user.id), :id, :name, @service_company.try(:id)), prompt: "-- Company --", class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= submit_tag "Search", class: "btn btn-block btn-info" %>
      </div>
    </div>
  <% end %>
</div>
